#!/usr/bin/env bash

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
cd "$PROJECT_ROOT"

# Parse command line arguments
VERBOSE=false
COVERAGE=false
RACE=false
BENCH=false

usage() {
    cat << EOF
Usage: bin/test [OPTIONS]

Run tests for the multiedit project.

OPTIONS:
    -v, --verbose       Verbose test output
    -c, --coverage      Generate coverage report
    -r, --race          Run tests with race detector
    -b, --bench         Run benchmarks
    -h, --help          Show this help message

EXAMPLES:
    bin/test                    # Run all tests
    bin/test --verbose          # Run with verbose output
    bin/test --coverage         # Run with coverage report
    bin/test --race             # Run with race detector
    bin/test --bench            # Run benchmarks

EOF
    exit 0
}

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        -v|--verbose)
            VERBOSE=true
            shift
            ;;
        -c|--coverage)
            COVERAGE=true
            shift
            ;;
        -r|--race)
            RACE=true
            shift
            ;;
        -b|--bench)
            BENCH=true
            shift
            ;;
        -h|--help)
            usage
            ;;
        *)
            echo -e "${RED}Error: Unknown option $1${NC}"
            usage
            ;;
    esac
done

log_info() {
    echo -e "${BLUE}==>${NC} $1"
}

log_success() {
    echo -e "${GREEN}✓${NC} $1"
}

log_error() {
    echo -e "${RED}✗${NC} $1"
}

# Build test command
TEST_CMD="go test"
TEST_ARGS=""

if [ "$VERBOSE" = true ]; then
    TEST_ARGS="$TEST_ARGS -v"
fi

if [ "$RACE" = true ]; then
    TEST_ARGS="$TEST_ARGS -race"
fi

if [ "$COVERAGE" = true ]; then
    TEST_ARGS="$TEST_ARGS -coverprofile=coverage.out -covermode=atomic"
fi

if [ "$BENCH" = true ]; then
    TEST_ARGS="$TEST_ARGS -bench=."
fi

# Run tests
log_info "Running tests..."
if eval "$TEST_CMD $TEST_ARGS ./..."; then
    log_success "All tests passed"
else
    log_error "Tests failed"
    exit 1
fi

# Show coverage report if generated
if [ "$COVERAGE" = true ]; then
    log_info "Coverage report:"
    go tool cover -func=coverage.out | tail -1
    echo ""
    log_info "To view HTML coverage report, run:"
    echo "  go tool cover -html=coverage.out"
fi

echo ""
log_success "Testing completed successfully!"
